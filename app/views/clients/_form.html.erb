<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>
      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :age, style: "display: block" %>
    <%= form.text_field :age %>
  </div>

  <div class="d-flex justify-content-between gap-2 flex-column mt-3">
    <%= form.submit class:"btn btn-primary btn-sm"%>
    <%= link_to "Show this client", @client, class: "btn btn-primary btn-sm" %>
    <%= link_to "Back to clients", clients_path, class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
