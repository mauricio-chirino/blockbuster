<div id="<%= dom_id client %>">
  <tr>
    <th scope="row">
  
      <% if action_name  == "show" %>
                <%= client.id %>
      <% else %>
        <div class="avatar bg-primary text-white rounded-circle d-flex justify-content-center align-items-center me-3">
          <%= client.id %>
        </div>
      <% end %>
    </th>
    <td>
    
      <div class="fw-bold">
      <% if action_name  == "show" %><strong>Nombre : </strong><% end %>
        <%= client.name %>
      </div>
    </td>
    <td><% if action_name  == "show" %><strong>Age : </strong><% end %>
    <%= client.age %></td>
    <td>
    <br>
      <% if client.movies.last.present? %>
      <% if action_name  == "show" %><strong>Pelicula : </strong><% end %>
    <td>
        <span class="badge bg-danger"><%= client.movies.last %></span>
    </td>
    <% else %>  
      <td>
        <span class="badge bg-success">No registra Arriendo</span>
      </td>
    <% end %> 
    <td>
      <% if action_name == "show" %>
        <div class="d-flex justify-content-between gap-2 flex-column mt-3">
          <%= link_to "Show this client", client, class: "btn btn-primary btn-sm" %>
          <%= link_to "Edit this client", edit_client_path(client), class: "btn btn-primary btn-sm" %>
          <%= link_to "Back to clients", clients_path, class: "btn btn-primary btn-sm" %>
          <%#= button_to "Destroy this client", @client, method: :delete, class:"btn btn-danger btn-sm " %>
        </div>
      <% else %>  
        <%= link_to "Show this client", client, class:"btn btn-primary btn-sm"%></td>
        <td><%= link_to "Edit this client", edit_client_path(client),class:"btn btn-warning btn-sm" %></td>
        <td><%#= link_to "Destroy this client", @client, method: :delete, class:"btn btn-danger btn-sm " %></td>
      <% end %>   
    <td>
      <%= button_to "Destroy this client", @client, method: :delete, class:"btn btn-danger btn-sm mt-2" %></td>
  </tr>

</div>

